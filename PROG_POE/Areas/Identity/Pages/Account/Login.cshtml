@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<head>
    <style>
         .form-floating {
        position: relative;
    }

    .form-floating label {
        position: absolute;
        pointer-events: none;
        transition: transform .2s ease-out, color .2s ease-out, font-size .2s ease-out;
    }

    .form-floating input:focus + label,
    .form-floating input:not(:placeholder-shown) + label {
        transform: translate(-8px, -24px) scale(0.75);
        color: #495057;
    }

    .form-floating input::placeholder {
        color: transparent;
    }
    </style>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG_POE.styles.css" asp-append-version="true" />
</head>

<div class="row">
    <div class="col-md-4 mx-auto">
        <section>
            <form id="account" method="post" class="mt-5 text-center">
                <h2>Login</h2>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3 form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" ">
                    <label asp-for="Input.Email" class="form-label">Email address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3 form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder=" ">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>

                <div>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have an account? Register here.</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
