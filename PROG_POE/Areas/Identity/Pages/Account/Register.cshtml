@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <style>
        .form-floating {
        position: relative;
    }

    .form-floating label {
        position: absolute;
        pointer-events: none;
        transition: transform .2s ease-out, color .2s ease-out, font-size .2s ease-out;
    }

    .form-floating input:focus + label,
    .form-floating input:not(:placeholder-shown) + label {
        transform: translate(-8px, -24px) scale(0.75);
        color: #495057;
    }

    .form-floating input::placeholder {
        color: transparent;
    }
    </style>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG_POE.styles.css" asp-append-version="true" />
</head>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-5">
            <h2 class="text-center">Register</h2>
            <hr />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3 form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" ">
                <label for="email">Email address</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3 form-floating">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder=" ">
                <label for="password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-floating">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder=" ">
                <label for="confirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
